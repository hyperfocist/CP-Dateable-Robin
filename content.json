{
  "Format": "2.5.0",
  "ConfigSchema": {
    "Disable Portraits": {
      "AllowValues": "true, false",
      "Default": "false",
      "Section": "Disable Portraits",
      "Description": "If enabled, this mod's portraits won't be used and thus won't conflict with portrait mods. Note: This mod includes an added portrait (blushing) that other portrait mods are unlikely to have because they were never part of the vanilla game. The game will show their version of Robin's neutral portrait instead."
    },
    "Disable Sprites": {
      "AllowValues": "true, false",
      "Default": "false",
      "Section": "Disable Sprites",
      "Description": "If enabled, this mod's sprites won't be used and thus won't conflict with sprite mods. Note that you'll lose sprites for kissing, sleeping, the flower dance, and the wedding ceremony if you choose this option. Other sprite packs won't have sprites for these situations because they were never part of the vanilla game."
    }
  },
  "DynamicTokens": [
    {
      "Name": "RobinIsAvailable",
      "Value": true,
      "When": {
        "Relationship:Robin |contains=Divorced": "false",
        "HasFlag": "RobinDateable"
      }
    },
    {
      "Name": "RobinDemetriusDivorced",
      "Value": true,
      "When": {
        "HasFlag": "RobinDateable"
      }
    },
    {
      "Name": "RobinIsSingle",
      "Value": true,
      "When": {
        "Relationship:Robin |contains=Married": "false",
        "HasFlag": "RobinDateable"
      }
    }
  ],
  "Changes": [
    {
      "LogName": "Update characters",
      "Action": "Include",
      "FromFile": "assets/character/Characters.json"
    },
    {
      "LogName": "Update schedules",
      "Action": "Include",
      "FromFile": "assets/schedules/Schedules.json"
    },
    {
      "LogName": "Update festivals",
      "Action": "Include",
      "FromFile": "assets/data/Festivals.json"
    },
    {
      "LogName": "Update shops",
      "Action": "Include",
      "FromFile": "assets/data/Shops.json",
      "When": {
        "HasFlag": "Robin14Hearts"
      }
    },
    {
      "LogName": "Update maps",
      "Action": "Include",
      "FromFile": "assets/maps/Maps.json"
    },
    {
      "LogName": "Marriage dialog",
      "Action": "Include",
      "FromFile": "assets/dialogue/MarriageDialogueRobin.json"
    },
    {
      "LogName": "Robin dialog",
      "Action": "Include",
      "FromFile": "assets/dialogue/DialogueRobin.json"
    },
    {
      "LogName": "Demetrius dialog",
      "Action": "Include",
      "FromFile": "assets/dialogue/DialogueDemetrius.json"
    },
    {
      "LogName": "Maru dialog",
      "Action": "Include",
      "FromFile": "assets/dialogue/DialogueMaru.json"
    },
    {
      "LogName": "Sebastion dialog",
      "Action": "Include",
      "FromFile": "assets/dialogue/DialogueSebastian.json"
    },
    {
      "LogName": "Update events",
      "Action": "Include",
      "FromFile": "assets/events/Events.json"
    },
    {
      "LogName": "Update strings",
      "Action": "Include",
      "FromFile": "assets/strings/Strings.json"
    },
    {
      "LogName": "Update portraits",
      "Action": "Include",
      "FromFile": "assets/portraits/Portraits.json",
      "When": {
        "Disable Portraits": "false"
      }
    },
    {
      "LogName": "Update sprites",
      "Action": "Include",
      "FromFile": "assets/character/Sprites.json",
      "When": {
        "Disable Sprites": "false"
      }
    },
    {
      "LogName": "Update furniture",
      "Action": "Include",
      "FromFile": "assets/furniture/Furniture.json"
    }
